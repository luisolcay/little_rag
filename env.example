# Azure AI Search Configuration
# Copy this file to .env and fill in your values
LANGCHAIN_API_KEY=key
OPENAI_API_KEY=key 

# Azure OpenAI (for embeddings)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-large
AZURE_OPENAI_API_VERSION=2024-10-21

# Azure AI Search
AZURE_AI_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_API_KEY_ADMIN=your-admin-api-key-here
AZURE_SEARCH_API_KEY_QUERY=your-query-api-key-here

# Azure Document Intelligence (for OCR)
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-doc-intel.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_API_KEY=your-doc-intel-api-key-here
AZURE_DOCUMENT_INTELLIGENCE_MODEL_ID="prebuilt-read"

# Optional: Azure Storage (if using blob storage)
AZURE_BLOB_ENDPOINT=your-storage-connection-string-here
AZURE_BLOB_CONTAINER=orbe

# Azure Cosmos DB (NoSQL API / Core SQL API)
# Note: No connection string needed for NoSQL API - uses endpoint and keys directly
AZURE_COSMOS_DB_ENDPOINT=https://your-account.documents.azure.com:443/
AZURE_COSMOS_DB_PRIMARY_KEY=your-primary-key-here
AZURE_COSMOS_DB_SECONDARY_KEY=your-secondary-key-here (optional)
AZURE_COSMOS_DB_DATABASE_NAME=collahuasi-rag
AZURE_COSMOS_DB_CONTAINER_NAME=conversations

# Azure Redis Cache
AZURE_REDIS_HOST=...
AZURE_REDIS_PORT=6380
AZURE_REDIS_PRIMARY_KEY=...
AZURE_REDIS_SECONDARY_KEY=...
AZURE_REDIS_SSL=true

# LLM Configuration
AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-4o
AZURE_OPENAI_CHAT_DEPLOYMENT_MINI=gpt-4o-mini
LLM_DEFAULT_TEMPERATURE=0.1
LLM_MAX_TOKENS=4096
ENABLE_STREAMING=true

# Memory Configuration
REDIS_SESSION_TTL=86400
MEMORY_MAX_CONTEXT_TOKENS=8000
MEMORY_WINDOW_SIZE=10
MEMORY_SUMMARY_THRESHOLD=20
ENABLE_CONVERSATION_SUMMARIZATION=true